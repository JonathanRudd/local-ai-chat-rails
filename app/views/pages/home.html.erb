
 <div class="wrapper">
    <h2>GREETINGS</h2>
    <p></p>
    <ul class="messages">
      <li>Thinking...</li>
    </ul>
    <form class="add-items">
      <input type="text" name="item" placeholder="Comment here" required>
      <input type="submit" value="Ask">
    </form>
  </div>

<script>
  const addItems = document.querySelector('.add-items');
  const itemsList = document.querySelector('.messages');
  // items are already saved as a key value pair under text: 'item'
  // can we change this to include role: "user" and content ""
  const items = JSON.parse(localStorage.getItem('items')) || [];

  // const for gpt api: user messages will be added to this array, and used to call gpt api.
  // Gpt responses will also be added to this array, and both used to populate the ul list

  // const messageArray = [];


  function addItem(e) {
    e.preventDefault();
    const input = document.querySelector('input[name="item"]');
    const text = input.value;

    const item = { "role": "user", "content"  : text }; // create object with text property
    items.push(item); // add item to items array
    populateList(items, itemsList); // update display of list
    localStorage.setItem('items', JSON.stringify(items));
    this.reset();

  }

  function populateList(messages = [], messagesList) {
    messagesList.innerHTML = messages.map((message, i) => {
      return `
        <li>
          <label for="item${i}">${message.content}</label>
        </li>
      `;
    }).join('');
  }

  addItems.addEventListener('submit', addItem);

  populateList(items, itemsList);

</script>
